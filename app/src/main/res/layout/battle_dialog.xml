<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="6"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/textViewEnemyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EnemyName"
                android:textSize="20dp"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/textViewEnemyLife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EnemyLife"
                android:textSize="14dp"
                android:gravity="left"
                />
            <ProgressBar
                android:id="@+id/progressBarEnemyLife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressTint="#FF0000"
                android:max="100"
                />
            <TextView
                android:id="@+id/textViewEnemyDamaged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EnemyDamaged"
                android:textSize="14dp"
                android:textColor="#FF0000"
                android:gravity="left"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/textViewPlayerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PlayerName"
                android:textSize="20dp"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/textViewPlayerLife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PlayerLife"
                android:textSize="14dp"
                android:gravity="right"
                />
            <ProgressBar
                android:id="@+id/progressBarPlayerLife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressTint="#FF0000"
                android:max="100"
                />
            <TextView
                android:id="@+id/textViewPlayerDamaged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PlayerDamaged"
                android:textSize="14dp"
                android:textColor="#FF0000"
                android:gravity="right"
                />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <Button
                android:id="@+id/atkButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="공격"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/defButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="방어"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <Button
                android:id="@+id/itemButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="아이템"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/runButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="도주"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>